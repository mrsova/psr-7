{
    "config": {
      "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "aura/router": "^3.1",
        "psr/http-message": "^1.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-diactoros": "^1.7"
    },
    "autoload":{
        "psr-4":{
            "App\\": "src/App",
            "Framework\\": "src/Framework/",
            "Tests\\": "tests/"
